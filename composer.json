{
    "name": "relevo/php7-boilerplate",
    "description": "A tiny, yet powerful foundation for building modern web applications.",
    "type": "project",
    "license": "MIT",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": "~7.0",
        "php-di/php-di": "^5.4",
        "zendframework/zend-diactoros": "^1.3",
        "relay/relay": "^1.1",
        "phroute/phroute": "^2.1",
        "vlucas/phpdotenv": "^2.4",
        "joshcam/mysqli-database-class": "dev-master",
        "requtize/config": "^1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^5.4",
        "squizlabs/php_codesniffer": "*"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/app",
            "Framework\\": "framework"
        }
    }
}
